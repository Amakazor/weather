{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./dist",
    "/**/*.test.*"
  ]
}